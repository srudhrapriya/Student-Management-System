private void Update_table3() {
try{

String sql ="select * from Audit";
pst=conn.prepareStatement(sql);
rs=pst.executeQuery();
tbl_3.setModel(DbUtils.resultSetToTableModel(rs));
}
catch(Exception e){
JOptionPane.showMessageDialog(null, e);
}
finally {
try{
rs.close();
pst.close();
}
catch(Exception e){
}
}
}

