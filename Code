private void Fillcombobox(){
try {
String sql ="select * from Users";
pst=conn.prepareStatement(sql);
rs=pst.executeQuery();
while(rs.next()) {

String name =rs.getString("username");
txt_combo.addItem(name);
}
}catch (Exception e){
JOptionPane.showMessageDialog(null, e);
} finally {
try{
rs.close();
pst.close();
}catch (Exception e){
}
}
}
